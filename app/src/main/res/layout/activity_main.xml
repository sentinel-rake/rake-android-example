<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".MainActivity">


    <LinearLayout
        android:orientation="vertical"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent">

        <Button
            android:id="@+id/btnFlush"
            android:layout_width="fill_parent"
            android:text="@string/btnFlush"
            android:layout_height="wrap_content" />
        <Button
            android:id="@+id/btnTrack"
            android:layout_width="fill_parent"
            android:text="@string/btnTrack"
            android:layout_height="wrap_content" />
        <Button
            android:id="@+id/btnGCMRegisterDevice"
            android:layout_width="fill_parent"
            android:text="@string/btnGCMRegisterDevice"
            android:layout_height="wrap_content" />
        <Button
            android:id="@+id/btnGCMPushMessage"
            android:layout_width="fill_parent"
            android:text="@string/btnGCMPushMessage"
            android:layout_height="wrap_content" />

    </LinearLayout>
</RelativeLayout>
